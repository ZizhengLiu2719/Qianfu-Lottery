    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "prisma": "^5.7.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "wrangler": "^3.19.0"
